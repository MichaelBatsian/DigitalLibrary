
@model Godeltech.Mastery.Web.DigitalLibrary.Models.View.ExtendedMenuItemViewModel

@{
    if (ViewBag.LoginViewModel!=null)
    {
        Model.Login = ViewBag.LoginViewModel;
    }

}
<div class="container">
    <div class="navbar navbar-inverse" role="navigation">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-list menu-icon"></i>Categories<span class="caret"></span></a>
                    @Html.Action("Dropdown", "Categories")
                </li>
                 
                @foreach (var item in Model.MenuItems)
                {
                    <li class="@item.Active">
                        <a href="@Url.Action(item.Action,item.Controller)">
                            <i class="@item.Icon menu-icon"></i>@item.Name
                        </a>
                        @*@Html.ActionLink(item.Name, item.Action, item.Controller)*@
                    </li>
                }
                @Html.Partial("_MenuLoginPartial", Model.Login,Model.Data)
                <li>
                    @Html.ActionLink("Login","Login","Account")
                </li>
            </ul>
        </div>
    </div>
</div>
